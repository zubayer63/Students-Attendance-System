<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/color"
    tools:context="com.example.zubayer.strudentsattendance.teacherlogin">
    <include
        android:id="@+id/takeattendancebar"
        layout="@layout/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="368dp"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:focusableInTouchMode="false"
        android:forceHasOverlappingRendering="true"
        android:text="Welcome "
        android:textSize="30dp"
        android:textColor="#ffff"
        android:padding="6dp"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Your Batch"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:onClick="takeAttendanceButton"
            android:text="Take attendance"

            android:background="@drawable/loginselector"
            android:textColor="#000000"
             />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:onClick="previous_records"
            android:text="previous record"

            android:background="@drawable/loginselector"

            android:padding="10dp"
            android:textColor="#000000"
             />
        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:onClick="total_record"
            android:text="Total records"

            android:background="@drawable/loginselector"

            android:padding="10dp"
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="Logout"
            android:onClick="logoutTeacher"
            android:background="@drawable/loginselector"
            android:padding="10dp"
            android:textColor="#000000"
            />
    </LinearLayout>


</LinearLayout>
